{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    "config:recommended",
    "docker:enableMajor",
    ":automergeBranch",
    ":dependencyDashboard",
    ":disableRateLimiting",
    "helpers:pinGitHubActionDigests",
    "github>armando-g/home-ops//.renovate/autoMerge.json5",
    "github>armando-g/home-ops//.renovate/customManagers.json5",
    "github>armando-g/home-ops//.renovate/grafanaDashboards.json5",
    "github>armando-g/home-ops//.renovate/groups.json5",
    "github>armando-g/home-ops//.renovate/labels.json5",
    "github>armando-g/home-ops//.renovate/semanticCommits.json5",
  ],
  dependencyDashboard: true,
  dependencyDashboardTitle: 'Renovate Dashboard ðŸ¤–',
  suppressNotifications: [
    'prEditedNotification',
    'prIgnoreNotification',
  ],
  schedule: [
    'every weekend',
  ],
  ignorePaths: [
    '**/*.sops.*',
    "**/resources/**",
  ],
  flux: {
    managerFilePatterns: ["/\\.yaml(?:\\.j2)?$/"],
  },
  "helm-values": {
    managerFilePatterns: ["/\\.yaml(?:\\.j2)?$/"],
  },
  kubernetes: {
    managerFilePatterns: ["/\\.yaml(?:\\.j2)?$/"],
  },
}
